{
    "extends": [
        "@rocketseat/eslint-config/next",
        "next/core-web-vitals",
        "plugin:tailwindcss/recommended"
    ],
    "rules": {
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "warn",
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "all",
                "tabWidth": 4,
                "semi": true,
                "singleQuote": false,
                "bracketSpacing": true,
                "eslintIntegration": true,
                "printWidth": 80,
                "endOfLine": "auto"
            }
        ],
        "react/self-closing-comp": [
            "error",
            {
                "component": true,
                "html": true
            }
        ]
    }
}